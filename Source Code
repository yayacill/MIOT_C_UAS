#include <WiFi.h>
#include "DHTesp.h"
#include "ThingSpeak.h"


const int DHT_PIN = 15;
const char* ssid = "Wokwi-GUEST";
const char* pass = "";

WiFiClient client;

unsigned long ChannelNumber = 4;
const char* WriteAPIKey = "62VDZ8MJQ2VI5FWR";
const char* server = "api.thingspeak.com";

unsigned long lastTime = 0;
unsigned long timerDelay = 30000;

int led = 5;
float t, h;

DHTesp dhtSensor;

void setup(){
  Serial.begin(115200);
  pinMode(led, OUTPUT);
  dhtSensor.setup(DHT_PIN, DHTesp::DHT22);
  dhtSensor.getPin();
  delay(10);
  WiFi.begin(ssid, pass);
  while(WiFi.status() != WL_CONNECTED){
    delay(100);
    Serial.println(".");
  }
  Serial.println("WiFi Connected!");
  Serial.println(WiFi.localIP());
  WiFi.mode(WIFI_STA);
  ThingSpeak.begin(client);
}

void loop(){
  t = dhtSensor.getTemperature();
  h = dhtSensor.getHumidity();
  Serial.print("Suhu: " + String(t) + "Â°C ");
  Serial.print("Kelembapan: " + String(h) + "% ");

  ThingSpeak.setField(1, t);
  ThingSpeak.setField(2, h);
  
  int x = ThingSpeak.writeFields(ChannelNumber, WriteAPIKey);
  if(x == 200){
    Serial.println("Berhasil");
    if(t<10){
      digitalWrite(led, HIGH);
    }else{
      digitalWrite(led, LOW);
    }
  }else{
    Serial.println("Gagal. HTTP error code "+ String(x));
  }
}
